{% extends 'base.html.twig' %}

{% block title %}
Liste de {{ user.username }} | VidyaCollection
{% endblock %}

{% block content %}
    <div class="list-game-container"> <!-- Add this container -->
        {% for userGame in userGames %}
            <div class="list-game-entry">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <img src="{{ asset('game/' ~ userGame.image) }}" class="list-game-image" alt="Image">
                        </div>
                        <div class="flip-card-back">
                            <!-- Add the overlay here -->
                            <div class="flip-card-back-overlay">
                                <p>{{ userGame.title }}</p>
                                <p>Sorti le {{ userGame.releaseDate|date('Y-m-d') }}</p>
                                <p>Note: {{ userGame.note }} / 5</p>
                                {# <button class="favorite-button" data-game-id="{{ userGame.gameId }}" data-user-id="{{ user.id }}">Ajouter aux favoris</button> #}
                            </div>
                            <!-- End of overlay -->
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
