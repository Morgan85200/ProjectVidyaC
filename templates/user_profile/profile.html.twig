{% extends 'base.html.twig' %}

{% block title %}
Profile de {{ user.username }} | VidyaCollection
{% endblock %}

{% block content %}
    <div class="profile_container">
        <div class="left-block">
            <div>{{user.username}}</div>
                <div>{% if user.profilePicture %}
                    <img src="{{ asset('userImages/profilePicture/' ~ user.profilePicture) }}" alt="Profile Picture" class="profilePicture">
                {% endif %}
                {{ form_start(form) }}
                    {{ form_row(form.profilePictureFile) }}
                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
                <div class="bio-container">
                    <div class="bio-title">Ã€ propos de moi :</div>
                    <div>{{user.bio}}</div>
                </div>
            </div>
        </div>

        <div class="right-block">
            <h2>Jeux favoris</h2>
            <div class="list-game-container">
                {% for recentGame in recentGames %}
                    <div class="list-game-entry">
                    <a href="{{ path('game_test', {'id': recentGame.id}) }}">
                        <img src="{{ asset('game/' ~ recentGame.image) }}" class="list-game-image" alt="Image"></a>
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}